{
	"events": [
		{
			"__comment" : "设置上学的科目",
			"type" : "setValues",
			"values" : {
				"temp.classId" : "2d.ClassScheduleData.(function.date_string).(game.school)",
				"temp.interaction_description" : ""
			},
      "setTempData" : {
        "schoolStudy" : "gamedata.SchoolStudyData.(temp.classId)"
      }
		},
		{
			"__comment" : "事件框",
			"type" : "panel",
			"name" : "interactionPanel"
		},
		{
			"type" : "wait",
			"duration" : 1
		},
		{
			"type" : "setValues",
			"values" : {
				"temp.interaction_description" : "function.lab_study_result"
			}
		},
		{
			"__comment" : "刷新页面",
			"type" : "refresh",
			"refresh_ids" : [
				"interaction_description"
			] 
		},
    {
      "__comment" : "增长value",
      "type" : "setValues",
      "dataList" : "gamedata.SchoolStudyData.(temp.classId).attributeChange",
      "changes" : [
        {
          "type" : "add",
          "min" : "0",
          "data" : "associate",
          "field" : "value",
          "value" : "gamedata.SchoolStudyData.(temp.classId).map.attributeChange.(associate.attributeId)"
        }
      ]
    },
    {
      "__comment" : "增长Proficiency",
      "type" : "setValues",
      "changes" : [
        {
          "type" : "add",
          "min" : "0",
          "max" : "gamedata.ProficiencyData.(tempdata.schoolStudy.proficiencyId).maxValue",
          "data" : "tempdata.schoolStudy.proficiencyId",
          "field" : "value",
          "value" : "tempdata.schoolStudy.addProficiency"
        }
      ]
    },
    {
      "__comment" : "刷新页面",
      "type" : "refresh",
      "refresh_ids" : [
        "my_attribute"
      ]
    },
		{
			"__comment" : "开始执行放学后的工作",
			"type" : "wait",
			"until_click" : true
		},
	    {
	      "__comment" : "是否是业余时间工作",
	      "type" : "condition",
	      "condition" : "string.temp.chooseType=string.work",
	      "yes_story_id" : "action/workInteraction"
	    },
	   	{
	      "__comment" : "是否是业余时间自学",
	      "type" : "condition",
	      "condition" : "string.temp.chooseType=string.study",
	      "yes_story_id" : "action/studyInteraction"
	    },
	   	{
	      "__comment" : "是否是业余时间娱乐",
	      "type" : "condition",
	      "condition" : "string.temp.chooseType=string.play",
	      "yes_story_id" : "action/playInteraction"
	    },
      {
        "__comment" : "是否是业余时间休息",
        "type" : "condition",
        "condition" : "string.temp.chooseType=string.sleep",
        "yes_story_id" : "action/sleepInteraction"
      },
		{
			"__comment" : "如果是星期天就结束循环",
			"type" : "condition",
			"condition" : "int.game.weekDay=int.0",
			"yes_story" : {
				"events" : [
					{
						"type" : "wait",
						"until_click" : true
					},
					{
						"__comment" : "显示对话框",
						"type" : "dialog",
						"name" : "dialogPanel",
						"dialogs":[
							{
								"content" : "一周的生活就这么结束了。"
							}
						]
					},
					{
						"__comment" : "停止故事",
						"type" : "story",
						"name" : "stopStory"
					}
				]
			}
		},
		{
			"type" : "story",
			"name" : "dayPass"
		},
		{
			"type" : "popPanel"
		},
		{
			"type" : "story",
			"name" : "interactionStory"
		}
	]
}
