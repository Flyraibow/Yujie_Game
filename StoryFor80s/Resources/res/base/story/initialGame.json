{
	"events": [
		{
			"__comment" : "检查名是否符合",
			"type" : "condition",
			"condition" : "length.temp.firstName>int.0",
			"no_story_id" : "stopStory"
		},
		{
			"__comment" : "检查姓是否符合",
			"type" : "condition",
			"condition" : "length.temp.lastName>int.0",
			"no_story" : {
				"events" : [
					{
						"__comment" : "跳过",
						"type" : "story",
						"name" : "stopStory"
					}
				]
			}
		},
		{
			"__comment" : "测试剧情, 显示对话框",
			"type" : "dialog",
			"name" : "dialogPanel",
			"dialogs":[
				{
					"content" : "你的名字是：%s%s 确定吗？",
					"parameters" : [
						"temp.lastName",
						"temp.firstName"
					]
				}
			]
		},
		{
			"__comment" : "弹出确认选项",
			"type" : "selection",
			"background_color" : "alpha_black",
			"selections" : [
				{
					"text" : "translation.sys_confirm"
				},
				{
					"text" : "translation.sys_cancel",
					"story_id" : "stopStory"
				}
			]
		},
		{
			"__comment" : "设置玩家姓名",
			"type" : "setValues",
      "changes" : [
        {
          "type" : "set",
          "data" : "game",
          "field" : "firstName",
          "value" : "temp.firstName"
        },
        {
          "type" : "set",
          "data" : "game",
          "field" : "lastName",
          "value" : "temp.lastName"
        }
      ]
		},
		{
			"__comment" : "游戏界面",
			"type" : "story",
			"story" : {
				"scene" : "gameScene"
			}
		},
		{
			"__comment" : "检查剧情",
			"type" : "checkStory"
		}
	]
}
